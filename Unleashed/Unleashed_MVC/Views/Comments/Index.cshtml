@model IEnumerable<Unleashed_MVC.Models.Comment>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CommentContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CommentCreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CommentUpdatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParentComment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Review)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CommentContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CommentCreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CommentUpdatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentComment.CommentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Review.ReviewId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CommentId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CommentId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CommentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

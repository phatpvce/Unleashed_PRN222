@model IEnumerable<Unleashed_MVC.Models.Notification>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NotificationTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NotificationContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsNotificationDraft)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NotificationCreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NotificationUpdatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserIdSenderNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NotificationTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NotificationContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsNotificationDraft)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NotificationCreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NotificationUpdatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserIdSenderNavigation.UserId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NotificationId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.NotificationId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.NotificationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@model IEnumerable<Unleashed_MVC.Models.Variation>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VariationImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VariationPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VariationImage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VariationPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color.ColorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size.SizeId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VariationId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VariationId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VariationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
